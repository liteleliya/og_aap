<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen p-8 font-sans">
  <h1 class="text-3xl font-bold mb-6">Admin Dashboard</h1>

  <div class="flex items-center gap-4 mb-6">
    <a href="/dashboard"
       class="px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700">
       Back to User Dashboard
    </a>

    <a id="downloadBtn" href="/admin/registrations/download" 
       class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
       Download All Registrations (CSV)
    </a>

    <label for="courseSelect" class="font-medium">Filter by Course:</label>
    <select id="courseSelect" 
            class="border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
      <option value="">-- All Courses --</option>
      <% courses.forEach(c => { %>
        <option value="<%= c.id %>"><%= c.name %></option>
      <% }) %>
    </select>
  </div>

  <div id="registrationCount" class="mb-6">
    <div class="inline-flex items-center gap-3 bg-blue-50 border border-blue-200 text-blue-800 px-4 py-2 rounded-lg shadow-sm">
      <span class="font-semibold" id="registrationCountText">
        Total Registrations: <%= registrations.length %>
      </span>
    </div>
  </div>

  <h2 class="text-xl font-semibold mb-4">Registrations (Grouped by User)</h2>
  <div class="overflow-x-auto">
    <table id="registrationsTable" class="min-w-full border border-gray-200 rounded shadow-sm bg-white">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-4 py-2 text-left font-medium text-gray-700">Email</th>
          <th class="px-4 py-2 text-left font-medium text-gray-700">Display Name</th>
          <th class="px-4 py-2 text-left font-medium text-gray-700">Courses Registered</th>
          <th class="px-4 py-2 text-left font-medium text-gray-700">Total Courses</th>
        </tr>
      </thead>
      <tbody>
        <% registrations.forEach(r => { %>
          <tr data-course-ids="<%= r.course_ids.join(',') %>">
            <td><%= r.email %></td>
            <td><%= r.display_name %></td>
            <td><%= r.courses_registered %></td>
            <td><%= r.total_courses %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <div id="noResults" class="hidden mt-4 text-gray-500 italic">
    No registrations found for this course.
  </div>
  
  <script>
    const courseSelect = document.getElementById('courseSelect');
    const downloadBtn = document.getElementById('downloadBtn');
    const tableRows = document.querySelectorAll('#registrationsTable tbody tr');
    const noResults = document.getElementById('noResults');
    const registrationCount = document.getElementById('registrationCount');

    courseSelect.addEventListener('change', () => {
      const selectedCourseId = courseSelect.value;
      let visibleCount = 0;

      if (selectedCourseId) {
        downloadBtn.href = `/admin/registrations/${selectedCourseId}/download`;
        downloadBtn.textContent = 'Download This Course (CSV)';
      } else {
        downloadBtn.href = `/admin/registrations/download`;
        downloadBtn.textContent = 'Download All Registrations (CSV)';
      }

      tableRows.forEach(row => {
        const courseIds = row.getAttribute('data-course-ids').split(',');
        const match = !selectedCourseId || courseIds.includes(selectedCourseId);
        row.style.display = match ? '' : 'none';
        if (match) visibleCount++;
      });

      if (selectedCourseId) {
        registrationCount.textContent = `Total Registrations for this course: ${visibleCount}`;
      } else {
        registrationCount.textContent = `Total Registrations (all courses): ${visibleCount}`;
      }

      noResults.classList.toggle('hidden', visibleCount !== 0);
    });
  </script>
</body>
</html>
