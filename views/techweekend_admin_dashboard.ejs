<!DOCTYPE html>
<html>

<head>
  <title>TechWeekend Admin Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="icon" href="https://bpgc-cte.org/logo.png" type="image/png">
</head>

<body class="bg-gray-900 min-h-screen p-8 font-sans text-white">
  <h1 class="text-3xl font-bold mb-6 text-center">TechWeekend Admin Dashboard</h1>

  <div class="flex justify-center gap-6 mb-6">
    <button onclick="toggleSection('registrationsSection', 'registrationsArrow','registrations')"
      class="px-4 py-2 bg-green-700 text-white rounded hover:bg-green-600 flex items-center gap-2">
      <span id="registrationsArrow">+</span> Registrations
    </button>
    <button onclick="toggleSection('eventsSection', 'eventsArrow','events')"
      class="px-4 py-2 bg-blue-700 text-white rounded hover:bg-blue-600 flex items-center gap-2">
      <span id="eventsArrow">+</span> Manage Events
    </button>
    <a href="/tech-weekend" class="px-4 py-2 bg-gray-700 text-white rounded hover:bg-gray-600">
      Back to User Dashboard
    </a>
  </div>

  <div id="registrationsSection" class="hidden tab-content">
    <div class="flex items-center gap-4 mb-6">

      <div id="rowsPerPageContainer" class="flex items-center gap-3 bg-gray-800 px-4 py-2 rounded shadow-sm">
        <form method="get" action="/admin/techweekend/dashboard" class="flex items-center gap-3">
          <input type="number" class="bg-gray-700 text-white text-sm rounded border" name="regPage" min="1"
            placeholder="Enter Page Number" />
          <input type="hidden" name="tab" value="registrations">
          <label for="regLimit" class="text-sm text-gray-300 font-medium">Rows per page:</label>
          <select name="regLimit" id="regLimit" onchange="this.form.submit()"
            class="px-3 py-1 bg-gray-700 text-white text-sm rounded border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
            <option value="5" <%=registrationsLimit==5 ? 'selected' : '' %>>5</option>
            <option value="20" <%=registrationsLimit==20 ? 'selected' : '' %>>20</option>
            <option value="100" <%=registrationsLimit==100 ? 'selected' : '' %>>100</option>
          </select>
        </form>
      </div>

      <a id="downloadBtn" href="/admin/techweekend/registrations/download"
        class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-500">
        Download All Registrations (CSV)
      </a>

      <label for="eventSelect" class="font-medium">Filter by Event:</label>
      <select id="eventSelect"
        class="border border-gray-600 bg-gray-800 text-white rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
        <option value="">-- All Events --</option>
        <% events.forEach(e=> { %>
          <option value="<%= e.id %>">
            <%= e.name %>
          </option>
          <% }) %>
      </select>
    </div>

    <div class="flex flex-wrap gap-4 mb-6">
      <div
        class="inline-flex items-center gap-3 bg-green-900 border border-green-700 text-green-300 px-4 py-2 rounded-lg shadow-sm">
        <span class="font-semibold" id="registrationCountText">
          Total Registrations: <%= registrations.length %>
        </span>
      </div>
    </div>

    <h2 class="text-xl font-semibold mb-4">Registrations (Raw)</h2>
    <div class="overflow-x-auto">
      <table id="registrationsTable" class="min-w-full border border-green-600 rounded shadow-sm bg-black">
        <thead class="bg-green-700">
          <tr>
            <th class="px-4 py-2 text-left font-bold text-white border-r border-green-600">Email</th>
            <th class="px-4 py-2 text-left font-bold text-white border-r border-green-600">Display Name</th>
            <th class="px-4 py-2 text-left font-bold text-white border-r border-green-600">Phone Number</th>
            <th class="px-4 py-2 text-left font-bold text-white border-r border-green-600">Event</th>
            <th class="px-4 py-2 text-left font-bold text-white border-r border-green-600">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% registrations.forEach((r, idx)=> { %>
            <tr data-event-id="<%= r.event_id %>"
              class="<%= idx % 2 === 0 ? 'bg-gray-900' : 'bg-gray-800' %> hover:bg-green-950 border-b border-green-600">
              <td class="px-4 py-2 text-green-300 border-r border-green-600">
                <%= r.email %>
              </td>
              <td class="px-4 py-2 text-green-300 border-r border-green-600">
                <%= r.display_name %>
              </td>
              <td class="px-4 py-2 text-green-300 border-r border-green-600">
                <%= r.phone_number %>
              </td>
              <td class="px-4 py-2 text-green-300 border-r border-green-600">
                <%= r.event_name %>
              </td>
              <td class="px-4 py-2">
                <form method="POST" action="/admin/techweekend/registrations/delete"
                  onsubmit="return confirm('Delete registration for <%= r.display_name %> in <%= r.event_name %>?');">
                  <input type="hidden" name="user_id" value="<%= r.user_id %>">
                  <input type="hidden" name="event_id" value="<%= r.event_id %>">
                  <button type="submit" class="px-3 py-1 bg-red-600 text-white rounded hover:bg-red-500 transition">
                    Delete
                  </button>
                </form>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>

    <div class="mt-4 flex justify-between text-gray-300">
      <% if (registrationsPrevPage) { %>
        <a href="/admin/techweekend/dashboard?regPage=<%= registrationsPrevPage %>&regLimit=<%= registrationsLimit %>&tab=registrations"
          class="px-3 py-1 bg-gray-700 rounded hover:bg-gray-600">Prev</a>
        <% } %>
          <span>Page <%= registrationsCurrentPage %> of <%= registrationsTotalPages %></span>
          <% if (registrationsNextPage) { %>
            <a href="/admin/techweekend/dashboard?regPage=<%= registrationsNextPage %>&regLimit=<%= registrationsLimit %>&tab=registrations"
              class="px-3 py-1 bg-gray-700 rounded hover:bg-gray-600">Next</a>
            <% } %>
    </div>

    <div id="noResults" class="hidden mt-4 text-gray-400 italic">
      No registrations found for this event.
    </div>
  </div>

  <div id="eventsSection" class="hidden tab-content">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-xl font-semibold">Manage TechWeekend Events</h2>
      <button onclick="document.getElementById('addEventForm').classList.toggle('hidden')"
        class="px-4 py-2 bg-green-600 rounded hover:bg-green-500">
        Add New Event
      </button>
    </div>

    <form id="addEventForm" action="/admin/techweekend/events/add" method="POST" enctype="multipart/form-data"
      class="hidden mb-6 bg-gray-800 p-4 rounded">
      <h3 class="text-lg font-bold mb-2">Add Event</h3>
      <input type="text" name="name" placeholder="Event Name"
        class="w-full mb-2 px-3 py-2 rounded bg-gray-700 text-white" required>

      <label for="poster" class="block text-sm text-gray-300 mb-1">Poster Image (JPG/PNG)</label>
      <input type="file" id="poster" name="poster" accept="image/*" required
        class="w-full mb-2 px-3 py-2 rounded bg-gray-700 text-white">

      <textarea name="event_description" placeholder="Event Description"
        class="w-full mb-2 px-3 py-2 rounded bg-gray-700 text-white" required></textarea>

      <button type="submit" class="px-4 py-2 bg-green-600 rounded hover:bg-green-500">Add Event</button>
    </form>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% events.forEach(e=> { %>
        <div class="bg-gray-800 rounded-lg shadow-md p-4 flex flex-col justify-between">
          <div>
            <img src="<%= e.poster_url %>" alt="Poster" class="w-full h-40 object-cover rounded mb-3">
            <h3 class="text-lg font-bold mb-2">
              <%= e.name %>
            </h3>
            <p class="text-gray-300 mb-4">
              <%= e.event_description %>
            </p>
          </div>
          <div class="flex flex-wrap gap-2 mt-auto">
            <form action="/admin/techweekend/events/delete/<%= e.id %>" method="POST"
              onsubmit="return confirm('Delete this event?');">
              <button type="submit" class="px-3 py-1 bg-red-600 text-white rounded hover:bg-red-500">Delete</button>
            </form>
            <button onclick="toggleEditForm('<%= e.id %>')"
              class="px-3 py-1 bg-orange-600 text-white rounded hover:bg-orange-500">Edit</button>
          </div>

          <form id="editForm-<%= e.id %>" action="/admin/techweekend/events/edit/<%= e.id %>" method="POST"
            enctype="multipart/form-data" class="hidden mt-4 space-y-3">
            <input type="text" name="name" value="<%= e.name %>" class="w-full px-3 py-2 rounded bg-gray-700 text-white"
              required>

            <label for="poster-<%= e.id %>" class="block text-sm text-gray-300">Replace Poster (optional)</label>
            <input type="file" id="poster-<%= e.id %>" name="poster" accept="image/*"
              class="w-full px-3 py-2 rounded bg-gray-700 text-white">

            <textarea name="event_description" class="w-full px-3 py-2 rounded bg-gray-700 text-white"
              required><%= e.event_description %></textarea>

            <button type="submit" class="px-4 py-2 bg-blue-600 rounded hover:bg-blue-500">Save Changes</button>
            <button type="button" onclick="toggleEditForm('<%= e.id %>')"
              class="px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-500">Cancel</button>
          </form>
        </div>
        <% }) %>
    </div>

  </div>

  <script>
    function toggleSection(sectionId, arrowId, tabName) {
      const section = document.getElementById(sectionId);
      const arrow = document.getElementById(arrowId);
      const isHidden = section.classList.contains('hidden');

      document.querySelectorAll('.tab-content').forEach(s => s.classList.add('hidden'));
      document.querySelectorAll('[id$="Arrow"]').forEach(a => a.textContent = '+');

      if (isHidden) {
        section.classList.remove('hidden');
        arrow.textContent = '−';

        // Persist tab in URL
        const url = new URL(window.location);
        url.searchParams.set('tab', tabName);
        window.history.replaceState({}, '', url);
      } else {
        const url = new URL(window.location);
        url.searchParams.delete('tab');
        window.history.replaceState({}, '', url);
      }
    }

    document.addEventListener('DOMContentLoaded', () => {
      // Restore tab from URL on refresh
      const url = new URL(window.location);
      const tab = url.searchParams.get('tab');

      if (tab) {
        const map = {
          users: ['usersSection', 'usersArrow'],
          courses: ['coursesSection', 'coursesArrow'],
          registrations: ['registrationsSection', 'registrationsArrow'],
          events: ['eventsSection', 'eventsArrow']   // ✅ added events tab support
        };

        if (map[tab]) {
          const [sectionId, arrowId] = map[tab];
          const section = document.getElementById(sectionId);
          const arrow = document.getElementById(arrowId);
          section.classList.remove('hidden');
          if (arrow) arrow.textContent = '−';
        }
      }

      const eventSelect = document.getElementById('eventSelect');
      const downloadBtn = document.getElementById('downloadBtn');
      const tableBody = document.querySelector('#registrationsTable tbody');
      const tableRows = Array.from(tableBody.querySelectorAll('tr'));
      const noResults = document.getElementById('noResults');
      const registrationCountText = document.getElementById('registrationCountText');
      const rowsPerPageContainer = document.getElementById('rowsPerPageContainer');

      if (eventSelect) {
        eventSelect.addEventListener('change', () => {
          const selectedEventId = eventSelect.value;
          let visibleRows = [];

          // Toggle rows-per-page visibility
          if (rowsPerPageContainer) {
            if (selectedEventId) {
              rowsPerPageContainer.classList.add('hidden');
            } else {
              rowsPerPageContainer.classList.remove('hidden');
            }
          }

          // Update download link
          if (selectedEventId) {
            downloadBtn.href = `/admin/techweekend/registrations/${selectedEventId}/download`;
            downloadBtn.textContent = 'Download This Event (CSV)';
          } else {
            downloadBtn.href = `/admin/techweekend/registrations/download`;
            downloadBtn.textContent = 'Download All Registrations (CSV)';
          }

          // Filter rows
          tableRows.forEach(row => {
            const eventId = row.getAttribute('data-event-id');
            const match = !selectedEventId || eventId === selectedEventId;
            row.style.display = match ? '' : 'none';
            if (match) visibleRows.push(row);
          });

          // Sort visible rows by Display Name
          visibleRows.sort((a, b) => {
            const nameA = a.querySelector('td:nth-child(2)').textContent.trim().toLowerCase();
            const nameB = b.querySelector('td:nth-child(2)').textContent.trim().toLowerCase();
            return nameA.localeCompare(nameB);
          });
          visibleRows.forEach(row => tableBody.appendChild(row));

          // Update totals
          registrationCountText.textContent = selectedEventId
            ? `Total Registrations for this event: ${visibleRows.length}`
            : `Total Registrations (all events): ${tableRows.length}`;

          // Show/hide "no results"
          noResults.classList.toggle('hidden', visibleRows.length !== 0);
        });
      }
    });
  </script>

</body>

</html>